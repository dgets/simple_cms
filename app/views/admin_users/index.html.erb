<% @page_title = "Admin Users" %>

<%= link_to("<<Back to Menu", {:controller => 'access', :action => 'index'}, 
				:class => 'back-link') %>

<div class="adminusers index">
  <h2>Admin Users</h2>

  <%= link_to("Add new admin user", {:action => 'new'}, 
		:class => 'action new') %>

  <div><%= pluralize(@ausers.size, 'admin user') %> found</div>
  <table class="listing" summary="Admin users list">
    <tr class="header">
	<th>&nbsp;</th>
	<th>Name</th>
	<th>Email</th>
	<th>Username</th>
	<th>Actions</th>
    </tr>
    <% @ausers.each do |auser| %>
    <tr class="<%= cycle('odd', 'even') %>">
	<td><%= auser.id %></td>
	<td><%= auser.last_name %>, <%= auser.first_name %></td>
	<td><%= auser.email %></td>
	<td><%= auser.username %></td>
    	<td class="actions">
	  <%= link_to("Edit", {:action => 'edit', :id => auser.id},
			:class => 'action edit') %>
	  <%= link_to("Delete", {:action => 'delete', :id => auser.id},
			:class => 'action delete') %>
	</td>
    </tr>
    <% end %>
  </table>
</div>

